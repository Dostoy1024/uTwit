<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" DefaultTargets="Package">

  <!-- 
  	****************************************
  	* IMPORTS
	****************************************
  -->
  <Import Project="$(MSBuildProjectDirectory)\Package.Common.build.xml" />

  <!-- 
  	****************************************
  	* PROPERTIES
	****************************************
  -->
  <PropertyGroup>
    <ProjectName>Our.Umbraco.uTwit.PropertyEditor</ProjectName>
	<ProjectDir>$(RootDir)\Src\$(ProjectName)</ProjectDir>
  </PropertyGroup>
  
  <!-- 
  	****************************************
  	* TARGETS
	****************************************
  -->
    
  <!-- PREPAIRE FILES --> 
  <Target Name="PrepairFiles" DependsOnTargets="Compile">
    <ItemGroup>
      <BinFiles Include="$(ProjectDir)\Bin\$(ProjectName).dll" />
      <WebFiles Include="$(ProjectDir)\Web\UI\**\*.aspx" />
      <!-- WebFiles Include="$(ProjectDir)\Web\UI\**\*.resx" -->
      <WebFiles Include="$(ProjectDir)\Web\UI\**\*.js" />
      <WebFiles Include="$(ProjectDir)\Web\UI\**\*.html" />
      <WebFiles Include="$(ProjectDir)\Web\UI\**\*.manifest" />
      <PackageFile Include="$(RootDir)\Package.xml" /> 
    </ItemGroup>
	<Copy SourceFiles="@(BinFiles)" DestinationFolder="$(BuildDir)\$(ProjectName)\bin" />
    <Copy SourceFiles="@(WebFiles)" DestinationFolder="$(BuildDir)\$(ProjectName)\%(RecursiveDir)" />
	<Copy SourceFiles="$(RootDir)\Package.PropertyEditor.xml" DestinationFiles="$(BuildDir)\$(ProjectName)\Package.xml" />
  </Target>  
  
</Project>